function titleCase(str) {
  let arr = str.split('');
  for (let i =0; i<str.length;i++) {
    if (arr[i-1] === ' ' || i === 0) {
arr[i] = arr[i].toUpperCase();
    }
    else {
      arr[i] = arr[i].toLowerCase();
    }
  }
  str = arr.join('');
  return str;
}

console.log(titleCase("I'm a little tea pot"));
